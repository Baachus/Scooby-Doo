@model ScoobWebApp.ScoobRelation

@{
    ViewData["Title"] = "Edit";
}

<h1 id="Banner">Edit</h1>

<h4 id="Sub-Banner">Relationship</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Gang, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    <select asp-for="Gang" ,
                            class="form-control"
                            asp-items="Html.GetEnumSelectList<GangMember>()">
                        <option>Select type ...</option>
                    </select>
                </div>
                <span asp-validation-for="Gang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Relationship" class="control-label"></label>
                <input asp-for="Relationship" class="form-control" />
                <span asp-validation-for="Relationship" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appearance" class="control-label"></label>
                <input asp-for="Appearance" class="form-control" />
                <span asp-validation-for="Appearance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="Save" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List" id="Return_List">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
